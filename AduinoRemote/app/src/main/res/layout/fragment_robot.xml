<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/up"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ImageButton
        android:id="@+id/ib_up"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/right"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/ib_left"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ib_left" />

    <ImageButton
        android:id="@+id/ib_down"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/left"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/ib_left"
        app:layout_constraintTop_toBottomOf="@+id/ib_left"
        android:layout_marginRight="0dp" />

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/down"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ib_left"
        app:layout_constraintTop_toBottomOf="@+id/ib_down"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/a"
        android:scaleType="fitXY"
        android:id="@+id/iv_a"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_g"
        app:layout_constraintBottom_toTopOf="@+id/iv_g" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/s"
        android:scaleType="fitXY"
        android:id="@+id/iv_s"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_f"
        app:layout_constraintBottom_toTopOf="@+id/iv_f" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/f"
        android:scaleType="fitXY"
        android:id="@+id/iv_f"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/g"
        android:scaleType="fitXY"
        android:id="@+id/iv_g"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/iv_f"
        app:layout_constraintBottom_toTopOf="@+id/iv_f" />



</android.support.constraint.ConstraintLayout>
