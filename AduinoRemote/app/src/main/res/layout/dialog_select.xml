<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_select_robot"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/select_robot"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_select_car"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/select_car"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_select_various"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/select_button"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_select_chat"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/select_chat"
        android:scaleType="fitXY"/>
</LinearLayout>
